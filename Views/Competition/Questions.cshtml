<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color:aqua;
            color: #343a40; /* Tünd mətn rəngi */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Tam hündürlük */
            text-align: center;
            flex-direction: column; /* İçeriği dikey olaraq hizala */
        }

        h1 {
            font-size: 2.5rem;
            color: #007bff; /* Mavi başlıq */
            margin-bottom: 40px;
        }

        .row {
            display: flex;
            justify-content: center; /* Ortada hizalama */
            flex-wrap: nowrap; /* Elementləri bir sətirdə saxla */
            gap: 40px; /* Buttonlar arasında boşluq */
        }

        .btn-warning {
            background-color: #ffcc00; /* Parlaq sarı */
            border: none;
            color: #343a40;
            padding: 65px 100px;
            font-size: 2rem; /* Mətnin ölçüsü */
            border-radius: 10px;
            width: 120px; /* Kontrollü genişlik */
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out; /* Effekt üçün keçid */
            outline: none; /* Fokus üçün sərhəd göstərilməsin */
        }

            .btn-warning:hover {
                background-color: #e6ac00; /* Tünd sarı hover rəngi */
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
                transform: scale(1.4); /* Kiçik böyümə effekti */
            }

            .btn-warning:active {
                background-color: #cc9900; /* Daha tünd sarı aktiv rəngi */
                box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
                transform: scale(0.95); /* Kiçik yığılma effekti */
            }

            .btn-warning:focus {
                box-shadow: 0 0 10px rgba(0, 123, 255, 0.5); /* Fokus effekti */
            }

            .btn-warning .question-id {
                font-size: 5rem; /* Rəqəmlərin daha böyük görünməsi üçün */
                font-weight: bold;
            }

        .btn-secondary {
            background-color: brown;
            font-size: 30px;
            color: white;
            padding: 15px 35px;
            margin-top: 100px; 
            position: relative;
            top: 50px;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }
    </style>
</head>
<body>
    <h1>Questions</h1>
    <div class="row">
        @foreach (var question in Model.Questions)
        {
            <div>
                <a href="/Competition/QuestionDetail?topicId=@Model.Id&questionId=@question.Id" class="btn btn-warning m-2">
                    <span class="question-id">@question.Id </span>
                </a>
            </div>
        }
    </div>
    <a href="javascript:window.history.back();" class="btn btn-secondary mt-4">Geri</a>

</body>
</html>
